<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_transparent1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hm_select_pic_full_screen_top_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_select_pic_full_screen_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/actionbar_btn"
            android:paddingBottom="@dimen/hm_select_pic_full_screen_action_bar_back_padding_top_bottom"
            android:paddingLeft="@dimen/hm_select_pic_full_screen_action_bar_back_padding_left_right"
            android:paddingRight="@dimen/hm_select_pic_full_screen_action_bar_back_padding_left_right"
            android:paddingTop="@dimen/hm_select_pic_full_screen_action_bar_back_padding_top_bottom"
            android:src="@drawable/icon_back"
            />

        <TextView
            android:id="@+id/tv_select_pic_full_screen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_select_pic_full_screen_sure"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/hm_select_pic_full_screen_sure_padding"
            android:background="@drawable/actionbar_btn"
            android:gravity="center"
            android:padding="@dimen/hm_select_pic_full_screen_sure_padding"
            android:text="@string/hm_choose_image_finish"
            android:textColor="?attr/toolbar.textAction.textColor"
            android:textSize="@dimen/text_size_16"
            />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_select_pic_full_screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_select_pic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/hm_select_pic_full_screen_select_icon_margin_right"
            android:paddingRight="@dimen/hm_select_pic_full_screen_select_icon_margin_right"
            android:src="?attr/chooseImage.item.checkboxDrawable"
            />
    </RelativeLayout>
</LinearLayout>