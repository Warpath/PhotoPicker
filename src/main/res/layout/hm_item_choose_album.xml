<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/hm_chooseimage_album_cover_width"
        android:layout_height="@dimen/hm_chooseimage_album_cover_width"
        android:layout_marginBottom="@dimen/hm_chooseimage_album_cover_margin_top_bottom"
        android:layout_marginRight="@dimen/hm_chooseimage_album_cover_margin_right"
        android:layout_marginTop="@dimen/hm_chooseimage_album_cover_margin_top_bottom"
        android:background="?attr/chooseAlbum.menu.albumBackground"
        android:cropToPadding="true"
        android:paddingBottom="@dimen/hm_chooseimage_choose_cover_padding"
        android:paddingRight="@dimen/hm_chooseimage_choose_cover_padding"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15"/>

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_12"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/chooseAlbum.menu.conformDrawable"/>

</LinearLayout>